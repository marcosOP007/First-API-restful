	<script>
		async function fetchTemperatureLogs(channelId) {
			try {
				const response = await fetch(`/api/channels/${channelId}`);
				if (!response.ok) {
					throw new Error(`Erro ao buscar dados do canal: ${response.statusText}`);
				}
	
				const channelData = await response.json();
				console.log(`Dados do canal ${channelId}:`, channelData);
	
				if (channelData.Sensores && channelData.Sensores.length > 0) {
					console.log('Sensores do canal:');
					const data_logs = await Promise.all(channelData.Sensores.map(sensor => fetch(`/api/sensors/${sensor.id}/temperature-logs`).then(res => res.json())));
	
					downloadCSV({data: channelData, logs: data_logs});
				} else {
					console.log('Nenhum sensor encontrado para este canal.');
				}
			} catch (error) {
				console.error('Erro ao buscar dados do canal:', error);
			}
		}
	
		function convertChartDataToCSV(args) {
			const columnDelimiter = args.columnDelimiter || ',';
			const lineDelimiter = args.lineDelimiter || '\n';
			const labels = ["created_at", "entry_id", ...args.data.Sensores.map((_, i) => `field${i+1}`)];
			let csv = labels.join(columnDelimiter) + lineDelimiter;
				
			args.logs[0].forEach((log, i) => {
				csv += log.created_at + columnDelimiter + (i+1);
				args.logs.forEach(log => {
					csv += columnDelimiter + log[i].temperature;
				});
				csv += lineDelimiter;
			});
	
			return csv;
		}
	
		function downloadCSV(args) {
			let csv = convertChartDataToCSV(args);
			if (csv == null) return;
	
			const filename = args.filename || 'data.csv';
			csv = 'data:text/csv;charset=utf-8,' + csv;
			const data = encodeURI(csv);
			const link = document.createElement('a');
			link.setAttribute('href', data);
			link.setAttribute('download', filename);
			document.body.appendChild(link);
			link.click();
			document.body.removeChild(link);
		}

	</script>

		
